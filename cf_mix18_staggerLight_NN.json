{
    "name": "Mix18_staggerLight_NN",
    "cuda": true,
    "gpu": 0,
    "super_computer": true,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FormsBoxDetect",
        "special_dataset": "mix",
        "data_dir": "../data/forms",
        "batch_size": 2,
        "shuffle": true,
        "num_workers": 2,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "crop_params": {
            "crop_size":[652,1608],
            "pad":0
        },
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "only_types": {
            "boxes":true
        },
        "rotation": false,
        "only_opposite_pairs": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [0.52,0.52],
        "crop_params": null
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.01,
        "weight_decay": 0
    },
    "loss": {
        "box":"YoloLoss"
    },
    "loss_params": {
        "box": {
            "ignore_thresh": 0.5,
            "bad_conf_weight": 20.0,
            "multiclass":true
        }
    },
    "loss_weights":{"box":1.0},
    "metrics": [],
    "trainer": {
        "class": "BoxDetectTrainer",
        "iterations": 200000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 25000,
        "save_step_minor": 250,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 1000,
        "thresh_conf":0.88,
        "thresh_intersect":0.4
    },
    "arch": "YoloBoxDetector", 
    "model": {
        "pred_num_neighbors":true,
        "color":false,
        "number_of_box_types": 2,
        "number_of_point_types": 0,
        "number_of_pixel_types": 0,
        "norm_type": "group_norm",
        "dropout": true,
        "down_layers_cfg": [1,"k5-32", "M", 
                                64, 64,  "M", 
                                "hd2-128", "vd1-128", "hd4-128", 128,  "M", 
                                "hd4-256", "vd1-256", "hd8-256", 256,  "M", 
                                "hd8-512","vd1-512","hd16-512",512, 512],
        "up_layers_cfg":[],
        "anchors_file": "anchors_noRot_new_25.json",
        "rotation":false
    }
}
