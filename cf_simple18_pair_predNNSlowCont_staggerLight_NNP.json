{
    "name": "Simple18_pair_binaryALR_predNNSlowCont_staggerLight_NNP",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "super_computer":true,
    "data_loader": {
        "data_set_name": "FormsGraphPair",
        "special_dataset": "simple",
        "data_dir": "../data/forms",
        "batch_size": 1,
        "shuffle": true,
        "num_workers": 1,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "crop_params": {
            "crop_size":[652,1608],
	    "pad":0
        },
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "rotation": false,
        "only_opposite_pairs": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [0.52,0.52],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": {
        "box": "YoloLoss",
        "edge": "sigmoid_BCE_loss",
        "nn": "MSE"
    },
    "loss_weights": {
        "box": 1,
        "edge": 1,
        "nn": 0.25
    },
    "loss_params": 
        {
            "box": {"ignore_thresh": 0.5,
                    "bad_conf_weight": 20.0,
                    "multiclass":true}
        },
    "metrics": [],
    "trainer": {
        "class": "GraphPairTrainer",
        "iterations": 150000,
        "save_dir": "saved/",
        "val_step": 5000,
        "save_step": 25000,
        "save_step_minor": 250,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 1000,
        "conf_thresh_init": 0.9,
        "conf_thresh_change_iters": 5000,
        "retry_count":3,

        "unfreeze_detector": 4000,
        "partial_from_gt": 8000,
        "stop_from_gt": 200000,
        "use_bad_bb_pred_for_rel_loss": true,

        "use_learning_schedule": true,
        "adapt_lr": true
    },
    "arch": "PairingGraph", 
    "model": {
        "detector_checkpoint": "saved/Simple18_staggerLight_NN/checkpoint-iteration100000.pth.tar",
        "conf_thresh": 0.5,
        "start_frozen": true,
	"use_shape_feats": "corner",
        "expand_rel_context": 200,
        "expand_bb_context": 150,
        "use_detect_layer_feats": 16,
        "graph_config": {
            "arch": "BinaryPairReal",
            "in_channels": 256,
            "bb_out": 1,
            "rel_out": 1,
            "layers": ["FC256","FC256"],
            "layers_bb": ["FC256"]
        },
        "pred_nn": true,
        "featurizer_start_h": 20,
        "featurizer_start_w": 20,
        "featurizer_conv": [64,64,64,"M",128,"M",238],
        "featurizer_fc": null,

        "featurizer_bb_start_h": 20,
        "featurizer_bb_start_w": 20,
        "bb_featurizer_conv": [64,64,64,"M",128,"M",238]
    }
}
