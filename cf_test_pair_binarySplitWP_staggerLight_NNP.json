{
    "name": "test_pair_binarySplitWP_staggerLight_NNP",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "super_computer":false,
    "data_loader": {
        "data_set_name": "FormsGraphPair",
        "special_dataset": "simple",
        "data_dir": "../data/forms",
        "batch_size": 1,
        "shuffle": true,
        "num_workers": 1,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.4,0.65],
        "crop_params": {
            "crop_size":[652,1608],
	    "pad":0
        },
        "no_blanks": true,
        "swap_circle":true,
        "no_graphics":true,
        "cache_resized_images": true,
        "rotation": false,
        "only_opposite_pairs": true


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [0.52,0.52],
        "crop_params": null,
        "batch_size": 1
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.008,
        "weight_decay": 0
    },
    "loss": {
        "box": "YoloLoss",
        "edge": "sigmoid_BCE_loss"
    },
    "loss_weights": {
        "box": 1,
        "edge": 1
    },
    "loss_params": 
        {
            "box": {"ignore_thresh": 0.5,
                    "bad_conf_weight": 20.0,
                    "multiclass":true}
        },
    "metrics": [],
    "trainer": {
        "class": "GraphPairTrainer",
        "iterations": 200000,
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 50000,
        "save_step_minor": 250,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "warmup_steps": 1000,
        "conf_thresh_init": 0.9,
        "conf_thresh_change_iters": 5000,
        "retry_count":3,

        "unfreeze_detector": 4000,
        "partial_from_gt": 8000,
        "stop_from_gt": 200000,

        "use_bad_bb_pred_for_rel_loss": true
    },
    "arch": "PairingGraph", 
    "model": {
        "detector_checkpoint": "saved/Simple18_staggerLight_NN/checkpoint-iteration100000.pth.tar",
        "conf_thresh": 0.92,
        "start_frozen": true,
	"use_rel_shape_feats": "corner",
        "expand_rel_context": 100,
        "use_detect_layer_feats": 16,
        "graph_config": {
            "arch": "BinaryPairReal",
            "in_channels": 256,
            "node_channels": 0,
            "edge_channels": 1,
            "layers": ["FC256","FC256"],
            "shape_layers": "saved/Simple19_pairNotGT_feat_wH/checkpoint-latest.pth.tar",
            "old_shape_layers": "saved/Simple18_pairNotGT_feat_wH/checkpoint-iteration8000.pth.tar",
            "weight_split": 0.0
        },
        "featurizer_start_h": 10,
        "featurizer_start_w": 10,
        "featurizer_conv": [128,128,"M",256,240],
        "featurizer_fc": null
    }
}
